{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "node16",
    "target": "ES6",
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "strict": true,
    "moduleSuffixes": [""],
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "ts-node": { "files": true, "esm": true },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
